@require "../../css/comm"
//下拉菜单
tm-dropdown
  x-inline-block()
  vertical-align middle
  line-height normal
.selectBox
  padding-top 20px
  .selectLabel
    width 80px
    height 30px
    line-height 30px
    text-align right
    display inline-block
    margin-right 10px
    vertical-align middle
  //select
.selects
  padding 0 10px
  height 30px
  line-height 29px
  width 200px
  border 1px solid #e7e7e7
  background-color #fff
  position relative
  vertical-align top
  display inline-block
  box-sizing border-box
  cursor pointer
  *display inline
  *zoom 1
  .search
    position absolute
    top 0
    margin-left -10px
    width 320px
    input.input
      padding-left 10px
      width 99%
      border none

  .se-label
    width 90% !important
    height 100%
    display inline-block
    *display inline
    *zoom 1
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    text-align left!important
    cursor pointer
    margin-bottom 0
    font-size 12px
  i.icon-drop-down
    color #999
    font-size 12px
    position absolute
    right 4px
    top 0
    x-transform(rotate(0deg))
    x-transition(all linear 0.3s)
    x-inline-block()
    &.active
      color $body-txt
      x-transform(rotate(180deg))
      x-transition(all linear 0.3s)
      x-inline-block()
  &.disabled
    background #eeeeee
    cursor no-drop
    .se-item
      display none !important
    label
      cursor no-drop
      color #ccc
    i.icon-drop-down
      color #ccc
      x-transform(rotate(0deg))
      x-transition(all linear 0.3s)
    &:hover
      border-color #e7e7e7
      i.icon-drop-down
        color #ccc
      x-transform(rotate(0deg))
      x-transition(all linear 0.3s)
  &:hover
    border-color #dedede
    i.icon-drop-down
      color #7a7a7a

  .se-item
    position absolute
    top 29px
    background-color #fff
    left -1px
    width 100%
    border-left 1px solid #dedede
    border-right 1px solid #dedede
    border-bottom 1px solid #dedede
    z-index 4
    max-height 330px
    overflow-y auto
    overflow-x hidden
    font-size 12px
    x-box-shadow(0 1px 5px 1px rgba(0,0,0,0.13))
    .once
      box-sizing border-box
      width 100%
      padding 0 10px
      height 33px
      line-height 33px
      text-align left
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      &.noData
        color #999
    .top-search
      margin-top 0
      margin-left 10px
      margin-right 12px
      height 28px
      width calc(100% - 22px)
      min-width 128px
      //&.focus
      //  width 100%
      .po-search
        position absolute
        top 0
        left 2px
        font-size 14px
        font-weight 600
        color #ddd
        &:hover
          color #666
      .search-input
        padding 3px 8px
        padding-left 10px
        padding-right 20px
        width 100%
        height 26px
        font-size 14px
        box-sizing border-box
        color #aaa
        border-top 0
        border-left 0
        border-right 0
        background-color transparent
        border-color rgba(0, 0, 0, .2)
        border-bottom 1px solid rgba(0, 0, 0, .2)
        x-opacity(1)
        &:focus
          border-color rgba(0, 0, 0, 0)
      .lin-span
        bottom -1px
        height 1px
        background $fff
      .po-close
        top -2px
        font-size 12px
        &:hover
          color #666
.select-swid
  width 100px
.select-mwid
  width 150px
.select-lwid
  width 320px
.select-page
  width 65px
.select-xs
  width 50px
.sub-select-wid
  width 70px
.showSelect
  border-color #fff
  background none
  .iconFont.icon-drop-down
    display none

